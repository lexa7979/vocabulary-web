{
  "name": "vocabulary-web",
  "version": "1.0.0",
  "description": "My own vocabulary app, based on React and Express.js",
  "scripts": {
    "test": "jest",
    "test:w": "jest --watch",
    "test:wu": "jest --watch -u",
    "server": "nodemon serverDev.js",
    "build": "bash -c 'WEBPACK_MODE=build WEBPACK_ENV=prod webpack'",
    "build-dev": "bash -c 'WEBPACK_MODE=build WEBPACK_ENV=dev webpack'",
    "watch": "bash -c 'WEBPACK_MODE=watch WEBPACK_ENV=dev webpack'",
    "serve": "bash -c 'WEBPACK_ENV=dev webpack serve'",
    "postinstall": "rm -rf ./dist/* ./node_modules/.cache/webpack"
  },
  "keywords": [
    "vocabulary",
    "learning",
    "web",
    "react",
    "expressjs"
  ],
  "author": "Alexander Urban <lexa79@pm.me>",
  "license": "MIT",
  "dependencies": {
    "@fontsource/roboto": "^4.5.0",
    "@material-ui/core": "^4.12.2",
    "@material-ui/icons": "^4.11.2",
    "clsx": "^1.1.1",
    "cookie-parser": "^1.4.5",
    "express": "^4.17.1",
    "express-session": "^1.17.2",
    "prop-types": "^15.7.2",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-router-dom": "^5.2.0"
  },
  "devDependencies": {
    "@babel/core": "^7.14.8",
    "@babel/preset-env": "^7.14.8",
    "@babel/preset-react": "^7.14.5",
    "@testing-library/jest-dom": "^5.14.1",
    "@testing-library/react": "^12.0.0",
    "@types/jest": "^26.0.24",
    "@types/node": "^16.4.6",
    "babel-jest": "^27.0.6",
    "babel-loader": "^8.2.2",
    "css-loader": "^6.2.0",
    "dotenv": "^10.0.0",
    "eslint": "^7.31.0",
    "eslint-config-airbnb": "^18.2.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.23.4",
    "eslint-plugin-jest": "^24.4.0",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-react": "^7.24.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "file-loader": "^6.2.0",
    "html-webpack-plugin": "^5.3.2",
    "jest": "^27.0.6",
    "jest-extended": "^0.11.5",
    "mini-css-extract-plugin": "^2.1.0",
    "nodemon": "^2.0.12",
    "null-loader": "^4.0.1",
    "prettier": "^2.3.2",
    "sass": "^1.36.0",
    "sass-loader": "^12.1.0",
    "terser-webpack-plugin": "^5.1.4",
    "webpack": "^5.47.0",
    "webpack-cli": "^4.7.2",
    "webpack-dev-server": "^3.11.2"
  },
  "eslintConfig": {
    "env": {
      "node": true,
      "jest": true
    },
    "extends": [
      "airbnb",
      "prettier"
    ],
    "ignorePatterns": [
      "src/index.html"
    ],
    "plugins": [
      "jest"
    ],
    "rules": {
      "no-use-before-define": [
        "error",
        "nofunc"
      ],
      "no-underscore-dangle": "off",
      "react/jsx-filename-extension": "off"
    }
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "es5",
    "useTabs": false,
    "printWidth": 100,
    "arrowParens": "avoid"
  },
  "babel": {
    "presets": [
      "@babel/preset-env",
      "@babel/preset-react"
    ]
  },
  "jest": {
    "clearMocks": true,
    "setupFilesAfterEnv": [
      "jest-extended"
    ],
    "verbose": true,
    "testEnvironment": "jsdom"
  }
}
