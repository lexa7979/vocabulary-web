{
    "name": "vocabulary-web",
    "version": "1.0.0",
    "description": "My own vocabulary app, based on React and Express.js",
    "scripts": {
        "test": "jest",
        "test:w": "jest --watch",
        "test:wu": "jest --watch -u",
        "server": "nodemon serverDev.js",
        "build": "bash -c 'WEBPACK_MODE=build WEBPACK_ENV=prod webpack'",
        "build-dev": "bash -c 'WEBPACK_MODE=build WEBPACK_ENV=dev webpack'",
        "watch": "bash -c 'WEBPACK_MODE=watch WEBPACK_ENV=dev webpack'",
        "serve": "bash -c 'WEBPACK_ENV=dev webpack serve'",
        "postinstall": "rm -rf ./dist/* ./node_modules/.cache/webpack",
        "create-cert": "openssl genrsa -out key.pem && openssl req -new -key key.pem -out csr.pem && openssl x509 -req -days 9999 -in csr.pem -signkey key.pem -out cert.pem && rm csr.pem"
    },
    "keywords": [
        "vocabulary",
        "learning",
        "web",
        "react",
        "expressjs"
    ],
    "author": "Alexander Urban <lexa79@pm.me>",
    "license": "MIT",
    "dependencies": {
        "@emotion/react": "^11.14.0",
        "@emotion/styled": "^11.14.0",
        "@fontsource/roboto": "^5.1.0",
        "@mui/icons-material": "^6.2.0",
        "@mui/material": "^6.2.1",
        "cookie-parser": "^1.4.7",
        "express": "^4.21.2",
        "express-session": "^1.18.1",
        "react": "^19.0.0",
        "react-dom": "^19.0.0",
        "react-router-dom": "^7.0.2"
    },
    "devDependencies": {
        "@babel/core": "^7.26.0",
        "@babel/preset-env": "^7.26.0",
        "@babel/preset-react": "^7.26.3",
        "@testing-library/jest-dom": "^6.6.3",
        "@testing-library/react": "^16.1.0",
        "@types/jest": "^29.5.14",
        "@types/node": "^22.10.2",
        "babel-jest": "^29.7.0",
        "babel-loader": "^9.2.1",
        "css-loader": "^7.1.2",
        "dotenv": "^16.4.7",
        "eslint": "^8.57.1",
        "eslint-config-airbnb": "^19.0.4",
        "eslint-config-prettier": "^9.1.0",
        "eslint-plugin-import": "^2.31.0",
        "eslint-plugin-jest": "^28.9.0",
        "eslint-plugin-jsx-a11y": "^6.10.2",
        "eslint-plugin-react": "^7.37.2",
        "eslint-plugin-react-hooks": "^4.6.2",
        "file-loader": "^6.2.0",
        "html-webpack-plugin": "^5.6.3",
        "jest": "^29.7.0",
        "jest-extended": "^4.0.2",
        "mini-css-extract-plugin": "^2.9.2",
        "nodemon": "^3.1.9",
        "null-loader": "^4.0.1",
        "prettier": "^3.4.2",
        "sass": "^1.83.0",
        "sass-loader": "^16.0.4",
        "terser-webpack-plugin": "^5.3.11",
        "webpack": "^5.97.1",
        "webpack-cli": "^5.1.4",
        "webpack-dev-server": "^5.2.0"
    },
    "eslintConfig": {
        "env": {
            "node": true,
            "jest": true,
            "browser": true
        },
        "extends": [
            "airbnb",
            "prettier"
        ],
        "ignorePatterns": [
            "src/index.html"
        ],
        "plugins": [
            "jest"
        ],
        "rules": {
            "no-use-before-define": [
                "error",
                "nofunc"
            ],
            "no-underscore-dangle": "off",
            "react/jsx-filename-extension": "off",
            "react/prop-types": "off"
        }
    },
    "prettier": {
        "singleQuote": true,
        "trailingComma": "es5",
        "useTabs": false,
        "tabWidth": 4,
        "printWidth": 120,
        "arrowParens": "avoid"
    },
    "babel": {
        "presets": [
            "@babel/preset-env",
            "@babel/preset-react"
        ]
    },
    "nodemonConfig": {
        "ext": "js,jsx,json",
        "watch": [
            "src/"
        ],
        "delay": 3000,
        "restartable": "rs",
        "verbose": true
    },
    "jest": {
        "clearMocks": true,
        "setupFilesAfterEnv": [
            "jest-extended"
        ],
        "verbose": true,
        "testEnvironment": "jsdom"
    }
}
